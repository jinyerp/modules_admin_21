    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this template?",
            "requireSecurityKey": false
        },
        "messages": {
            "success": "템플릿이 성공적으로 삭제되었습니다.",
            "error": "Error deleting template: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "enable": true,
            "is_default": false,
            "category": "admin",
            "version": "1.0.0"
        },
        "fillable": [
            "name",
            "slug",
            "title",
            "description",
            "category",
            "author",
            "version",
            "enable",
            "is_default"
        ],
        "messages": {
            "success": "템플릿이 성공적으로 생성되었습니다.",
            "error": "Error creating template.",
            "continueSuccess": "Template created. You can continue adding more templates."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "slug": "nullable|string|unique:admin_templates",
                "title": "required|string|max:255",
                "description": "nullable|string",
                "category": "nullable|string",
                "author": "nullable|string|max:255",
                "version": "nullable|string|max:50",
                "enable": "boolean",
                "is_default": "boolean"
            },
            "messages": {
                "name.required": "Name is required.",
                "title.required": "Title is required.",
                "title.max": "Title cannot exceed 255 characters."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "name",
            "slug",
            "title",
            "description",
            "category",
            "author",
            "version",
            "enable",
            "is_default"
        ],
        "messages": {
            "success": "템플릿이 성공적으로 수정되었습니다.",
            "error": "Error updating template."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "slug": "nullable|string",
                "title": "required|string|max:255",
                "description": "nullable|string",
                "category": "nullable|string",
                "author": "nullable|string|max:255",
                "version": "nullable|string|max:50",
                "enable": "boolean",
                "is_default": "boolean"
            },
            "messages": {
                "name.required": "Name is required.",
                "title.required": "Title is required.",
                "title.max": "Title cannot exceed 255 characters."
            }
        }
