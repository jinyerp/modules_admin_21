{
    "controllerClass": "\\Jiny\\Settings\\App\\Http\\Controllers\\Admin\\AdminEmailtemplates\\AdminEmailtemplates",
    "title": "Email Templates Management",
    "subtitle": "Manage email templates in the system",
    "description": "Email templates management system with CRUD operations, preview and test sending.",
    "route": {
        "name": "admin.emailtemplates",
        "prefix": "admin.emailtemplates",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "admin_email_templates",
        "model": "\\Jiny\\Settings\\App\\Models\\AdminEmailtemplates",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "is_active": "boolean",
            "variables": "array"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::template.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-settings::admin.admin_emailtemplates.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-settings::admin.admin_emailtemplates.search",
        "paging": 20,
        "searchable": [
            "name",
            "slug",
            "subject"
        ],
        "sortable": [
            "id",
            "name",
            "slug",
            "type",
            "is_active",
            "created_at",
            "updated_at"
        ],
        "filterable": [
            "is_active",
            "type"
        ],
        "heading": {
            "title": "Email Templates",
            "description": "Manage email templates for system notifications"
        },
        "features": {
            "enableCreate": true,
            "enableDelete": true,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": "10",
            "perPageOptions": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "Search email templates...",
            "debounce": 300
        },
        "filters": {
            "is_active": {
                "label": "Status",
                "options": {
                    "": "All",
                    "1": "Active",
                    "0": "Inactive"
                }
            },
            "type": {
                "label": "Type",
                "options": {
                    "": "All",
                    "html": "HTML",
                    "markdown": "Markdown"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "80px"
                },
                "name": {
                    "label": "Name",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "slug": {
                    "label": "Slug",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "subject": {
                    "label": "Subject",
                    "visible": true,
                    "responsive": "lg",
                    "truncate": 50
                },
                "type": {
                    "label": "Type",
                    "visible": true,
                    "sortable": true,
                    "badge": true
                },
                "is_active": {
                    "label": "Status",
                    "visible": true,
                    "sortable": true,
                    "toggleable": true
                },
                "created_at": {
                    "label": "Created",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d"
                },
                "actions": {
                    "label": "Actions",
                    "visible": true,
                    "width": "150px"
                }
            }
        }
    },
    "create": {
        "buttonText": "Add New Email Template",
        "heading": {
            "title": "Create New Email Template",
            "description": "Add a new email template to the system"
        },
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-settings::admin.admin_emailtemplates.create",
        "formLayout": "vertical"
    },
    "edit": {
        "heading": {
            "title": "Edit Email Template",
            "description": "Update email template information"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-settings::admin.admin_emailtemplates.edit",
        "formLayout": "vertical"
    },
    "show": {
        "heading": {
            "title": "Email Template Details",
            "description": "View email template information"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-settings::admin.admin_emailtemplates.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "Active",
                "false": "Inactive"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this email template?"
        },
        "messages": {
            "success": "Email template deleted successfully.",
            "error": "Error deleting email template: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "is_active": true,
            "type": "html"
        },
        "fillable": [
            "name",
            "slug",
            "subject",
            "body",
            "variables",
            "type",
            "is_active"
        ],
        "messages": {
            "success": "Email template created successfully.",
            "error": "Error creating email template.",
            "continueSuccess": "Email template created. You can continue adding more."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "slug": "required|string|max:255|unique:admin_email_templates,slug",
                "subject": "required|string|max:255",
                "body": "required|string",
                "variables": "nullable|json",
                "type": "required|in:html,markdown",
                "is_active": "boolean"
            },
            "messages": {
                "name.required": "Template name is required.",
                "slug.required": "Template slug is required.",
                "slug.unique": "This slug is already taken.",
                "subject.required": "Email subject is required.",
                "body.required": "Email body is required."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "name",
            "slug",
            "subject",
            "body",
            "variables",
            "type",
            "is_active"
        ],
        "messages": {
            "success": "Email template updated successfully.",
            "error": "Error updating email template."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "slug": "required|string|max:255",
                "subject": "required|string|max:255",
                "body": "required|string",
                "variables": "nullable|json",
                "type": "required|in:html,markdown",
                "is_active": "boolean"
            },
            "messages": {
                "name.required": "Template name is required.",
                "slug.required": "Template slug is required.",
                "subject.required": "Email subject is required.",
                "body.required": "Email body is required."
            }
        }
    }
}