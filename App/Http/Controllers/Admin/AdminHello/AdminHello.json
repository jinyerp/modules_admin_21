{
    "title": "Hello Management",
    "subtitle": "Manage hellos in the system",
    "description": "Hello management system with CRUD operations.",
    "route": {
        "name": "admin.hello",
        "prefix": "admin.hello",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "admin_hellos",
        "model": "\\Jiny\\Admin2\\App\\Models\\AdminHello",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "enable": "boolean"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::template.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_hello.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_hello.search",
        "paging": 20,
        "searchable": [
            "title",
            "description"
        ],
        "sortable": [
            "id",
            "title",
            "enable",
            "pos",
            "created_at",
            "updated_at"
        ],
        "filterable": [
            "enable"
        ],
        "heading": {
            "title": "Hello List",
            "description": "Manage your hellos..."
        },
        "features": {
            "enableCreate": true,
            "enableDelete": true,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": "10",
            "perPageOptions": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "Search hellos...",
            "debounce": 300
        },
        "filters": {
            "enable": {
                "label": "Status",
                "options": {
                    "": "All",
                    "1": "Enabled",
                    "0": "Disabled"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "80px"
                },
                "title": {
                    "label": "Title",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "description": {
                    "label": "Description",
                    "visible": true,
                    "responsive": "lg",
                    "truncate": 50
                },
                "enable": {
                    "label": "Status",
                    "visible": true,
                    "sortable": true,
                    "toggleable": true
                },
                "pos": {
                    "label": "Position",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md"
                },
                "created_at": {
                    "label": "Created",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d"
                },
                "actions": {
                    "label": "Actions",
                    "visible": true,
                    "width": "150px"
                }
            }
        }
    },
    "create": {
        "buttonText": "Add New Hello",
        "heading": {
            "title": "Create New Hello",
            "description": "Add a new hello to the system"
        },
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-admin::admin.hello.create",
        "formLayout": "vertical"
    },
    "edit": {
        "heading": {
            "title": "Edit Hello",
            "description": "Update hello information"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-admin::admin.hello.edit",
        "formLayout": "vertical"
    },
    "show": {
        "heading": {
            "title": "Hello Details",
            "description": "View hello information"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.hello.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "Enabled",
                "false": "Disabled"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this hello?"
        },
        "messages": {
            "success": "Hello deleted successfully.",
            "error": "Error deleting hello: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "enable": true,
            "pos": 0
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "Hello created successfully.",
            "error": "Error creating hello.",
            "continueSuccess": "Hello created. You can continue adding more."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "Title is required."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "Hello updated successfully.",
            "error": "Error updating hello."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "Title is required."
            }
        }
    }
}