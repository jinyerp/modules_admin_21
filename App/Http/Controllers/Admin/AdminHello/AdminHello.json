{
    "title": "Hello Management",
    "subtitle": "Manage hellos in the system",
    "description": "Hello management system with CRUD operations.",
    "route": {
        "name": "admin.hello",
        "prefix": "admin.hello",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "admin_hello",
        "model": "\\Jiny\\Admin2\\App\\Models\\AdminHello",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "is_active": "boolean"
        }
    },
    "template": {
        "layout": "jiny-admin2::layouts.admin",
        "index": "jiny-admin2::template.index",
        "show": "jiny-admin2::template.show",
        "create": "jiny-admin2::template.create",
        "edit": "jiny-admin2::template.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin2::template.livewire.admin-table",
        "tablePath": "jiny-admin2::admin.admin_hello.table",
        "searchLayoutPath": "jiny-admin2::template.livewire.admin-search",
        "searchFormPath": "jiny-admin2::admin.admin_hello.search",
        "paging": 20,
        "heading": {
            "title": "Hello List",
            "description": "Manage your hellos..."
        },
        "features": {
            "enableCreate": true,
            "enableDelete": true,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": "10",
            "perPageOptions": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "Search hellos...",
            "debounce": 300
        }
    },
    "create": {
        "buttonText": "Add New Hello",
        "heading": {
            "title": "Create New Hello",
            "description": "Add a new hello to the system"
        },
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "createLayoutPath": "jiny-admin2::template.livewire.admin-create",
        "formPath": "jiny-admin2::admin.admin_hello.create",
        "formLayout": "vertical"
    },
    "edit": {
        "heading": {
            "title": "Edit Hello",
            "description": "Update hello information"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin2::template.livewire.admin-edit",
        "formPath": "jiny-admin2::admin.admin_hello.edit",
        "formLayout": "vertical"
    },
    "show": {
        "heading": {
            "title": "Hello Details",
            "description": "View hello information"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin2::template.livewire.admin-show",
        "showPath": "jiny-admin2::admin.admin_hello.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "Enabled",
                "false": "Disabled"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this hello?"
        },
        "messages": {
            "success": "Hello deleted successfully.",
            "error": "Error deleting hello: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "is_active": true
        },
        "fillable": [
            "name",
            "message",
            "is_active"
        ],
        "messages": {
            "success": "Hello created successfully.",
            "error": "Error creating hello.",
            "continueSuccess": "Hello created. You can continue adding more."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "message": "nullable|string",
                "is_active": "boolean"
            },
            "messages": {
                "name.required": "Name is required."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "name",
            "message",
            "is_active"
        ],
        "messages": {
            "success": "Hello updated successfully.",
            "error": "Error updating hello."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "message": "nullable|string",
                "is_active": "boolean"
            },
            "messages": {
                "name.required": "Name is required."
            }
        }
    }
}