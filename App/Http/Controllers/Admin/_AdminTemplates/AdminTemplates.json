{
    "title": "관리자 템플릿 관리",
    "subtitle": "시스템 템플릿과 레이아웃을 관리합니다.",
    "description": "Admin template management system with Livewire3 CRUD operations.",
    "route": {
        "name": "admin2.templates",
        "prefix": "admin2.templates",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "admin_templates",
        "model": "\\Jiny\\Admin2\\App\\Models\\AdminTemplate",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "is_active": "boolean",
            "config": "array"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::template.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_templates.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_templates.search",
        "paging": 20,
        "heading": {
            "title": "Admin Templates",
            "description": "Manage your admin templates"
        },
        "features": {
            "enableCreate": true,
            "enableDelete": true,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "listPath": "jiny-admin::admin.admin_templates.list",
        "pagination": {
            "perPage": "10",
            "perPageOptions": [
                10,
                25,
                50,
                100
            ]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "Search templates...",
            "debounce": 300
        },
        "display": {
            "textLengths": {
                "name": 50,
                "description": 100
            },
            "dateFormat": "Y-m-d",
            "datetimeFormat": "Y-m-d H:i:s",
            "emptyMessage": "No templates found.",
            "statusLabels": {
                "enabled": "Enabled",
                "disabled": "Disabled"
            }
        },
        "clickAction": {
            "column": "name",
            "action": "show"
        },
        "settingsDrawer": {
            "title": "Table Settings",
            "description": "Customize table display options",
            "enableColumnToggle": true,
            "enablePerPageSelector": true,
            "enableSortOptions": true,
            "enableFilterOptions": true,
            "enableExportOptions": false
        }
    },
    "create": {
        "buttonText": "새 템플릿 추가",
        "heading": {
            "title": "Create New Template",
            "description": "Add a new admin template to the system"
        },
        "enableContinueCreate": true,
        "enableFieldReset": false,
        "continueResetFields": [],
        "enableListButton": true,
        "enableSettingsDrawer": true,

        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-admin::admin.admin_templates.create",
        "formLayout": "vertical",
        "settingsDrawer": {
            "title": "Form Settings",
            "description": "Customize form options",
            "enableDefaultValues": true,
            "enableFieldToggle": true,
            "enableValidationRules": true
        }
    },
    "edit": {
        "heading": {
            "title": "Edit Template",
            "description": "Update template information"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-admin::admin.admin_templates.edit",
        "formLayout": "vertical",
        "includeTimestamps": true,
        "settingsDrawer": {
            "title": "Edit Settings",
            "description": "Customize edit form options",
            "enableFieldToggle": true,
            "enableValidationRules": true,
            "enableChangeTracking": true
        }
    },
    "show": {
        "heading": {
            "title": "Template Details",
            "description": "View template information"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath":"jiny-admin::template.livewire.admin-show",

        "showPath": "jiny-admin::admin.admin_templates.show",
        "display": {
            "dateFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "Enabled",
                "false": "Disabled"
            }
        },
        "includeId": true,
        "includeTimestamps": true,
        "settingsDrawer": {
            "title": "Display Settings",
            "description": "Customize detail view options",
            "enableFieldToggle": true,
            "enableDateFormat": true,
            "enableSectionToggle": true
        }
    },
    "formSections": {
        "basic": {
            "title": "Basic Information",
            "fields": [
                "name",
                "slug",
                "description"
            ]
        },
        "metadata": {
            "title": "Metadata",
            "fields": [
                "category",
                "author",
                "version"
            ]
        },
        "settings": {
            "title": "Settings",
            "fields": [
                "enable",
                "settings"
            ]
        },
        "timestamps": {
            "title": "Timestamps",
            "readonly": true,
            "fields": [
                "created_at",
                "updated_at"
            ]
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this template?",
            "requireSecurityKey": false
        },
        "messages": {
            "success": "템플릿이 성공적으로 삭제되었습니다.",
            "error": "Error deleting template: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "is_active": true,
            "category": "admin"
        },
        "fillable": [
            "name",
            "path",
            "description",
            "category",
            "is_active",
            "config"
        ],
        "messages": {
            "success": "템플릿이 성공적으로 생성되었습니다.",
            "error": "Error creating template.",
            "continueSuccess": "템플릿이 생성되었습니다. 계속해서 추가할 수 있습니다."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "path": "required|string",
                "description": "nullable|string",
                "category": "nullable|string",
                "is_active": "boolean",
                "config": "nullable|json"
            },
            "messages": {
                "name.required": "Name is required.",
                "path.required": "Path is required."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "name",
            "path",
            "description",
            "category",
            "is_active",
            "config"
        ],
        "messages": {
            "success": "템플릿이 성공적으로 수정되었습니다.",
            "error": "Error updating template."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "slug": "required|string|unique:admin_templates,slug,{id}",
                "description": "nullable|string",
                "category": "nullable|string",
                "author": "nullable|string|max:255",
                "version": "nullable|string|max:50",
                "enable": "boolean",
                "settings": "nullable|json"
            },
            "messages": {
                "name.required": "Name is required.",
                "slug.required": "Slug is required.",
                "slug.unique": "Slug must be unique."
            }
        }
    }
}